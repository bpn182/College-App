    </LinearLayout>

    <!-- fourth period-->

    <LinearLayout
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#ec7831"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
