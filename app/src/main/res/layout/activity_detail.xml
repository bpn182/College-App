        </LinearLayout>

    </LinearLayout>

    <!-- third period -->

    <LinearLayout

        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#ec7932"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="8dp"
